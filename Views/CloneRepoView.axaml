<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:MyApp.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="MyApp.Views.CloneRepoView" 
        CanResize="False"
        Title="Clone a repository"
        Width="400"
        Height="100"
        >

        <Window.DataContext>
            <vm:CloneRepoViewModel/>
        </Window.DataContext>

    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        <TextBlock HorizontalAlignment="Center" Name="Text">Clone a repo</TextBlock>
       
        <Grid 
        ColumnDefinitions="4*, Auto"
        Margin="5"    
        >
            <TextBox 
                Grid.Row="0" 
                Grid.Column="0" 
                Name="dirPath" 
                Text="{Binding GitUrl, Mode=TwoWay}"
            >
            </TextBox>

            <Button 
            Grid.Row="0"
            Grid.Column="1"
            Command="{Binding CloneRepoFromInput}"
           >Clone</Button>
        </Grid>

    </StackPanel>
</Window>
